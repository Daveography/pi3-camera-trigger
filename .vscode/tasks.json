{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\BuildTools\\MSBuild\\Current\\Bin\\msbuild.exe",
            "args": [
                "pi3-camera-trigger.sln",
                "/t:build",
                "/p:platform=ARM",
                "/p:configuration=Release",
                "/p:VisualStudioVersion=16.0",
                "/p:GenerateFullPaths=true",
                "/p:AppxBundlePlatforms=\"ARM\"",
                "/p:AppxPackageDir=\"AppxPackages\"",
                "/p:AppxBundle=Always",
                "/p:UapAppxPackageBuildMode=StoreUpload",
                "/p:AppxPackageSigningEnabled=true",
                "/p:PackageCertificateThumbprint=\"\"",
                "/p:PackageCertificateKeyFile=\".vscode\\SigningKey.pfx\""
            ]
        },
        {
            "label": "package",
            "command": "C:\\Program Files (x86)\\Windows Kits\\10\\bin\\10.0.18362.0\\x64\\makeappx.exe",
            "args": [
                "pack",
                "/o",
                "/v",
                "/m",
                "appxmanifest.xml",
                "/f",
                "mapping.txt",
                "/p",
                "bin\\pi3-camera-trigger.appx"
            ],
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}